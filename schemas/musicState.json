{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "connectionState": {
            "type": "string",
            "enum": ["CONNECTED", "CONNECTING", "DISCONNECTED"]
        },
        "track": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "artist": { "type": "string" },
                "song": { "type": "string" },
				"album": { "type":  "string" }
            }
        }
    },
    "required": ["connectionState"],
    "default": {
        "connectionState": "DISCONNECTED"
    }
}
